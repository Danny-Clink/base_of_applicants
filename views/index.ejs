        <script src='/javascripts/formScripts.js'></script>
        <script src="https://cdn.jsdelivr.net/npm/superagent"></script>
    </head>
    <body>
      <center>
        <div style="width: 700px; height: 200px;" div class="row">
                    <h1><b>Create new applicant</b></h1><br>
                <form action="/insertApplicants" method="POST">
                    <div class="row">
                      <div class="col">
                          <label for="name">Name</label>
                        <input type="text" class="form-control" placeholder="Name" name = "name" id = "name">
                      </div>
                      <div class="col">
                        <div>
                            <label for="yearOfBirth">Year Of Birth</label>
                              <input type="text" class="form-control" name="yearOfBirth" id="yearOfBirth" placeholder="YearOfBirth" required>
                            </div>
                      </div>
                      <div class="col">
                          <label for="createNewApplicantMath">Math</label>
                          <input type="text" class="form-control" name = "math" placeholder="Math" id="createNewApplicantMath">
                      </div>
                      <div class="col">
                          <label for="createNewApplicantHistory">History</label>
                          <input type="text" class="form-control"  name = "history" placeholder="History" id="createNewApplicantHistory">
                      </div>
                      <div class="col">
                          <label for="createNewApplicantEnglish">English</label>
                          <input type="text" class="form-control" name = "english" placeholder="English" id="createNewApplicantEnglish">
                      </div>
                    </div><br>
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </form>
              </div>
      </center>
            <center><h1><b>Applicants:</b></h1></center><br>
        <table class="table table-striped container" id="tasks">
            <thead>
              <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Year Of Birth</th>
                <th scope="col">Math</th>
                <th scope="col">History</th>
                <th scope="col">English</th>
                <th scope="col">Total Score</th>
              </tr>
            </thead>
            <tbody>
                <% for (let i = 0; i < data.length; i++) {%>
              <tr>
                <td scope="row" id = "id<%i%>"><b><%=data[i].id%></b></td>
                <td id = "name"><%=data[i].name%></td>
                <td id = "yearOfBirth"><%=data[i].yearOfBirth%></td>
                <td id = "math"><%=data[i].math%></a></td>
                <td id = "history"><%=data[i].history%></td>
                <td id = "english"><%=data[i].english%></td>
                <td id = "totalScore"><%=data[i].totalScore%></td>
              </tr>
              <%} %>
            </tbody>
          </table>
          <div style="width: 300px; height: 200px; margin-left: 40% " div class="row">
          <form action="/" method="POST">
            <div class="row">
                <label for="selectColumn" style = " padding-left: 40%;">Column</label>
                <select class="form-control" id = "selectColumn" name = "column">
                    <option>id</option>
                    <option>name</option>
                    <option>yearOfBirth</option>
                    <option>math</option>
                    <option>history</option>
                    <option>english</option>
                    <option>totalScore</option>
                  </select>
                  <label for="selectMethod" style = " padding-left: 40%;">Method</label>
                  <select class="form-control" id = "selectMethod" name = "sort">
                      <option>max -> min</option>
                      <option>min -> max</option>
                  </select>
            </div><br>
            <div class="row">
              <div class="row">
                <button type="submit" class="btn btn-primary" style = " margin-left: 10%;">Submit</button>
              </div>
              <div class="row">
                  <button onclick="sendData();" class="btn btn-primary" style = " margin-left: 45%;">Export File</button>
              </div>
          </div>
          </form>
        </div>
    </body>
</html>